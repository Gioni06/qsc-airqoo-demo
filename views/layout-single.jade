doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    block meta
    style.
      #fakeLoader{z-index:99999!important; width: 100%; height:100%; position: absolute; background-color: white;opacity:1; width: 100vw; height: 100vh;}
    
  body.single-page
    #fakeLoader
    div#mainNavigation.navbar.navbar-fixed-top
      div.container
        div.row
          div.col-xs-12
            div.navbar-header
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aira-expanded='false', aira-controls='navbar')
                span.sr-only Toggle Navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href="/index.html")
                img.img(src="../img/static/logo.svg", width="172")
            div#navbar.navbar-collapse.collapse.navbar-right
              ul.nav.navbar-nav
                include _partials/links.jade
                li
                  form.navbar-form
                    block navbar-button
    block sub-menu
    block content
    link(href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900', rel='stylesheet', type='text/css')
    != css('../')
    != config_js()
    script(src="../js/build.js")
    != js('../')
    script.
      var loader = $('#fakeLoader');
      setTimeout(function(){
        loader.fadeTo('fast',0,'swing',function(){
        loader.remove();
        });
      },300);
    if env == 'production'  
      include _google-analytics-live.jade
    else
      include _google-analytics.jade 